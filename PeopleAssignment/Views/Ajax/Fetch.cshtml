@model List<Person>

@foreach (Person item in Model)
{
    <div class="col-12 col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@item.Id</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.Name - @item.City</h6>
            </div>
        </div>
    </div>
}